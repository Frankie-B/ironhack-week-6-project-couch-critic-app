<div class="login-container container-fluid d-flex justify-content-center">
  <div class="login-content  d-flex justify-content-center align-items-center flex-column  row">
    <div class="login-heading-container col">
      <h1 class="login-heading">Before We Heat The Popcorn, Log in.</h1>
    </div>
    <div class="login-form col">
      <form action="/user/login" method="POST">
        <label for="username">Username:</label>
        <input
          class="login-input form-control"
          type="text"
          pattern="[A-Za-z0-9_]{1,15}"
          required
          name="username"
          placeholder="Username"
        />
        <label for="password">Password:</label>
        <input
          class="login-input form-control"
          type="password"
          required
          name="password"
          placeholder="Password"
        />
        <button class="login-btn btn btn-primary" type="submit">
          Log In
        </button>
        <div class="login-small-container">
          <small class="login-small">
            Don't already have an account?
            <a href="/user/signup" class="login-link">
              Sign Up
            </a>
        </div>
      </form>
    </div>
  </div>
</div>;
