<div class="friend-container card" style="width: 18rem;">
  <img src="..." class="card-img-top" alt="...">
  <div class="friendCard-container row">
    <div class="friend-card col-4">    
      <h1 class="friend-title">{{friendsData.username}}</h1>
      <h4 class="friend-year">{{friendsData.firstName}}{{friendsData.lastName}}</h4>
      <h3 class="friend-director">Rated Movies</h3>
      <div class="movieLink-container">
        <a href="user/friends/{{friendsData._id}}">View Profile</a> 
        <a href="user/friend/delete/{{friendsData._id}}">delete friend</a>
      </div> 
    </div>
  </div>
</div>


